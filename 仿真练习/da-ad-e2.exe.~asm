DATA SEGMENT
TABLE DB 3FH,06H,5BH,4FH,66H,6DH,7DH,07H,7FH,6FH,77H,7CH,58H,5EH,79H,71H
DATA ENDS
CODE SEGMENT
ASSUME CS:CODE,DS:DATA
START:    MOV AX,DATA
MOV DS,AX
MOV AL,10000000B
OUT 66H,AL
AGAIN3:    OUT 70H,AL
AGAIN1:    IN AL,78H
TEST AL,01H
JNZ AGAIN1
AGAIN2:    IN AL,78H
TEST AL,01H
JZ AGAIN2
IN AL,70H ;开始读70H转换好的
MOV DL,AL  ;把读到的送到DL
AND AL,0FH  ;只取低四位
MOV BX,OFFSET TABLE   ;把数据TABLE对应
XLAT        ;AL得到对应的数字显示数据

OUT 62H,AL   ;启动
MOV AL,DL
MOV CL,4
SHR AL,CL
AND AL,0FH
MOV BX,OFFSET TABLE
XLAT
OUT 60H,AL
JMP AGAIN3
CODE ENDS
END START












